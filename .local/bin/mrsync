#!/bin/bash

scriptname="$(basename "${BASH_SOURCE[0]}")"
rundir="${XDG_RUNTIME_DIR:-${HOME}/.local/var/run}/${scriptname}"
mkdir -p "${rundir}"
pidfile="${rundir}/PID"

exec 200>"${pidfile}"
if ! flock -n 200 || ! echo "$$" > "${pidfile}"; then
    echo "another instance of the ${scriptname} is currently running..." >&2
    exit 1
fi
trap 'flock -u 200 && rm -f "${pidfile}"' EXIT SIGHUP SIGINT SIGQUIT SIGTERM

pkill -RTMIN+5 i3blocks

errfile="${rundir}/mr.error"
sshpass mr -j 10 -d "${HOME}" commit -S -m autocommit || touch "${errfile}"

# use sshpass to get around gpg problems with encrypted repos...
if ping -c 1 squid.stillwell.me >/dev/null 2>&1; then
    if sshpass mr -j 3 -d "${HOME}" autopush; then
        rm -f "${errfile}"
    else
        touch "${errfile}"
    fi
fi

pkill -RTMIN+5 i3blocks

exit 0
